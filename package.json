{
  "name": "gaus-control",
  "version": "1.0.0",
  "description": "Proyecto de control y gestión GausControl",
  "main": "src/index.js",
  "scripts": {
    "dev": "node src/index.js",
    "start": "NODE_ENV=production node src/index.js",
    "build": "echo 'Build process here'",
    "test": "jest",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v --rmi all",
    "docker:dev": "docker-compose -f docker-compose.yml -f docker-compose.override.yml up",
    "docker:prod": "docker-compose --profile production up -d",
    "update": "node -e \"require('child_process').spawn(process.platform === 'win32' ? 'scripts\\\\auto-update.bat' : 'scripts/auto-update.sh', [], {stdio: 'inherit', shell: true})\"",
    "pull-and-restart": "docker-compose pull && docker-compose up -d --force-recreate",
    "watch": "docker-compose logs -f app",
    "webhook": "node scripts/webhook-server.js"
  },
  "keywords": [
    "control",
    "gestión",
    "docker",
    "nodejs"
  ],
  "author": "Tu Nombre",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "redis": "^4.6.10"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
