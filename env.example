# Configuración de la aplicación
NODE_ENV=development
PORT=3000
DEBUG=true

# Base de datos PostgreSQL
DB_HOST=database
DB_PORT=5432
DB_NAME=gaus_control
DB_USER=gaus_user
DB_PASSWORD=gaus_password
DATABASE_URL=postgresql://gaus_user:gaus_password@database:5432/gaus_control

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Configuración de autenticación (generar claves seguras en producción)
JWT_SECRET=tu_jwt_secret_muy_seguro_aqui
SESSION_SECRET=tu_session_secret_muy_seguro_aqui

# Configuración de CORS
CORS_ORIGIN=http://localhost:3000

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de email (opcional)
EMAIL_HOST=
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM=noreply@gauscontrol.com
